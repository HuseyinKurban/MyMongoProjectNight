@model List<MyMongoProjectNight.Dtos.CustomerDtos.ResultCustomerDto>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Müşteri Adı</th>
            <th>Müşteri Soyadı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerId</td>
                <td>@item.CustomerName</td>
                <td>@item.CustomerSurname</td>
                <td><a href="/Customer/CustomerDelete/@item.CustomerId" class="btn btn-danger">Sil</a></td>
                <td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-warning">Güncelle</a></td>

            </tr>
        }

    </table>
    <a href="/Customer/CreateCustomer" class="btn btn-primary">Müşteri Ekle</a>
</div>